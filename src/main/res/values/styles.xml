<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="NewApi" >

    <style name="Feeligo.Theme" parent="@style/Theme.AppCompat">
        <!-- ANDROID VERSION UPPER OR EQUAL THAN 11 -->
        <item name="android:actionBarStyle">@style/Feeligo.ActionBar</item>

        <!-- ANDROID VERSION LOWER THAN 11 -->
        <item name="actionBarStyle">@style/Feeligo.ActionBar</item>
    </style>

    <style name="Feeligo.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <!-- ANDROID VERSION UPPER OR EQUAL THAN 11 -->
        <item name="android:background">@android:color/white</item>
        <item name="android:titleTextStyle">@style/Feeligo.ActionBar.TitleTextStyle</item>

        <!-- ANDROID VERSION LOWER THAN 11 -->
        <item name="background">@android:color/white</item>
        <item name="titleTextStyle">@style/Feeligo.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Feeligo.ActionBar.TitleTextStyle"  parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>