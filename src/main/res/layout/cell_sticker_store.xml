<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cell_sticker_store_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >
    <com.baloomba.feeligo.widget.FeeligoStickerImageView
        android:id="@+id/cell_sticker_store_sticker_image_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="10dp"
        app:is_active="false" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/cell_sticker_store_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/cell_sticker_store_author_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/darker_gray" />
        <TextView
            android:id="@+id/cell_sticker_store_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/cell_sticker_store_button_layout"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="20dp">
        <ImageView
            android:id="@+id/cell_sticker_store_action_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_add_pack" />
        <ProgressBar
            android:id="@+id/cell_sticker_store_action_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>